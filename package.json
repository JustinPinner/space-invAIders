        "@typescript-eslint/parser": "^7.0.0",
        "eslint": "^8.56.0",
        "gh-pages": "^6.3.0",
        "jest": "^29.7.0",
        "jest-canvas-mock": "^2.5.2",
        "jsdom": "^24.0.0",
        "playwright": "^1.44.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.2",
        "typescript": "^5.3.3",
        "vite": "^5.3.4"
    },
    "description": "",
    "main": ".eslintrc.js",
