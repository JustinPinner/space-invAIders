{
    "name": "space-invaders-game",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "build:gh-pages": "npm run build && cp dist/public/index.html dist/index.html",
        "preview": "vite preview",
        "deploy": "npm run build:gh-pages && gh-pages -d dist",
